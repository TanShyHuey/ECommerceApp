<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6EEFF"
    tools:context=".AboutUsActivity">

    <TextView
        android:id="@+id/article_paraone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFDAE7"
        android:fontFamily="casual"
        android:text="@string/aname"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#474343"
        android:textSize="34sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/article_paraone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_shirt"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:src="@drawable/ll" />

            <TextView
                android:id="@+id/article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_shirt"
                android:lineSpacingExtra="5sp"
                android:text="@string/smart_delivery"
                android:textColor="#090809" />

            <ImageView
                android:id="@+id/image_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/article"
                android:layout_marginTop="8dp"
                android:src="@drawable/aboutus" />

            <TextView
                android:id="@+id/article2"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:layout_below="@id/image_model"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-9dp"
                android:layout_marginEnd="0dp"
                android:lineSpacingExtra="5sp"
                android:text="@string/our_mission_text"
                android:textColor="#000000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp" />

            <ImageView
                android:id="@+id/image_shoes"
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:layout_below="@id/article2"
                android:layout_marginTop="8dp"
                android:src="@drawable/hmgoepprod" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>