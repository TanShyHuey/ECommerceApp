<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EcommerceMain">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ViewFlipper
            android:id="@+id/v_flipper"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp" />

        <Button
            android:id="@+id/button18"
            android:layout_width="142dp"
            android:layout_height="49dp"
            android:layout_below="@+id/v_flipper"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:onClick="gotoShoesPages"
            android:text="@string/shoes" />

        <Button
            android:id="@+id/button19"
            android:layout_width="126dp"
            android:layout_height="50dp"
            android:layout_below="@+id/v_flipper"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/button18"
            android:layout_toRightOf="@+id/button18"
            android:onClick="gotoComesticPages"
            android:text="@string/comestic" />

        <Button
            android:id="@+id/button20"
            android:layout_width="136dp"
            android:layout_height="50dp"
            android:layout_below="@+id/v_flipper"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_toEndOf="@+id/button19"
            android:layout_toRightOf="@+id/button19"
            android:onClick="gotoBagsPages"
            android:text="@string/bags" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="158dp"
            android:layout_height="145dp"
            android:layout_below="@+id/button18"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-1dp"
            android:onClick="gotoShoes1"
            app:srcCompat="@drawable/shoes1"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="188dp"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="84dp"
            android:onClick="gotoBag1"
            app:srcCompat="@drawable/bag3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="192dp"
            android:layout_height="156dp"
            android:layout_below="@+id/button20"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="40dp"
            android:onClick="gotoComestic7"
            app:srcCompat="@drawable/comestic2"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="224dp"
            android:layout_height="210dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="40dp"
            android:onClick="gotoLipstick"
            app:srcCompat="@drawable/gererere" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>